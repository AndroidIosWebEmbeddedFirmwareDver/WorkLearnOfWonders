<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/ll_hotwords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:background="@color/dc2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bc1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/M"
            android:paddingLeft="@dimen/L"
            android:paddingRight="@dimen/L"
            android:paddingTop="@dimen/L">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="热门搜索"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_14" />

            <com.wondersgroup.hs.healthcloud.common.view.AutoLineBreakLayout
                android:id="@+id/layout_hotwords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/XXL"
                app:nee_fill_child="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:background="@color/dc2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/L"
            android:background="@color/bc2" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_size_15"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16"
            android:text="我的搜索历史"/>

        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view"
            android:paddingLeft="@dimen/text_size_15"
            android:paddingRight="@dimen/text_size_15"
            android:background="@color/bc1"
            android:divider="@color/divider_color"
            android:dividerHeight="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view_tip"
            android:paddingLeft="@dimen/text_size_15"
            android:paddingRight="@dimen/text_size_15"
            android:background="@color/bc1"
            android:divider="@color/divider_color"
            android:dividerHeight="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
