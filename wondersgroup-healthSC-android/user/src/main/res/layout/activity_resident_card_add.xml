<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_card_see_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="就诊人姓名"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/tv_name_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="张**"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="身份证"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/tv_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="5130******000"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="居民健康卡号"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/L"
                android:background="@color/transparent"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:hint="请输入居民健康卡"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_14"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_explain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="说明:"
                android:textColor="#FF665E"
                android:textSize="@dimen/text_size_12"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_explain_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_explain_title"
                android:padding="3dp"
                android:text="1、绑定居民健康卡仅支持绵阳;"
                android:textColor="#FF665E"
                android:textSize="@dimen/text_size_12"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_explain_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_explain_one"
                android:text="2、请输入认证身份证办理的居民健康卡号。"
                android:textColor="#FF665E"
                android:textSize="@dimen/text_size_12"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="下一步"
                android:textColor="@color/tc0"
                android:textSize="@dimen/text_size_16"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>