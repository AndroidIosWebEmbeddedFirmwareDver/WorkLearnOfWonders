<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/attention_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical">

        <ImageView
            android:id="@+id/actionbar_attention_icon"
            android:layout_width="18dp"
            android:layout_height="17dp"/>

        <TextView
            android:id="@+id/actionbar_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/L"
            android:drawablePadding="10dp"
            android:paddingLeft="@dimen/M"
            android:text="关注"
            android:textColor="@color/tc0"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/doctor_name_title"
        android:textSize="@dimen/text_size_16"
        android:alpha="0"
        android:text="医生详情"
        android:gravity="center"
        android:textColor="@color/tc2"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/L"
        android:paddingRight="@dimen/L"
        android:src="@mipmap/ic_back_light" />

</FrameLayout>
