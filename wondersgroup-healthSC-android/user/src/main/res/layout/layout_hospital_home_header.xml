<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_hospital_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_bottom_margin"
            android:layout_alignParentBottom="true"
            android:background="#70000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/XL"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成都市第一人民医院"
                    android:textColor="@color/bc1"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_hospital_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/M"
                    android:text="三级甲等"
                    android:textColor="@color/tc4"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/XL">

                <TextView
                    android:id="@+id/txt_reservation_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="8000"
                    android:textColor="@color/bc1"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/M"
                    android:text="预约量"
                    android:textColor="@color/tc4"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        android:background="@color/bc1">

        <ImageView
            android:id="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:src="@mipmap/icon_loaction" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/L"
            android:layout_marginRight="@dimen/XXXXL"
            android:layout_toRightOf="@id/img_local"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="成都市高新南区繁雄大道万象北路18号sasadfaFasdffsdadsafasfd繁雄大道万象北路1sasadfaFasdffsdadsafasfd繁雄大道万象北路1sasadfaFasdffsdadsafasfd繁雄大道万象北路1sasadfaFasdffsdadsafasfd繁雄大道万象北路1"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/XL"
            android:src="@mipmap/icon_phone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/divider_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:layout_marginTop="@dimen/L"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bc4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_overview"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginBottom="@dimen/divider_line_thickness"
                android:layout_marginRight="@dimen/divider_line_thickness"
                android:layout_weight="1"
                android:background="@drawable/bg_item_white_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XL"
                    android:src="@mipmap/icon_hospital" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XXL"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医院概况"
                        android:textStyle="bold"
                        android:textColor="@color/tc1"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看医院简介"
                        android:textColor="@color/tc2"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reservation"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginBottom="@dimen/divider_line_thickness"
                android:layout_weight="1"
                android:background="@drawable/bg_item_white_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XL"
                    android:src="@mipmap/icon_registration" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XXL"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约挂号"
                        android:textColor="@color/tc1"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提前预约先人一步"
                        android:textColor="@color/tc2"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bc4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_doctor"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginBottom="@dimen/divider_line_thickness"
                android:layout_marginRight="@dimen/divider_line_thickness"
                android:layout_weight="1"
                android:background="@drawable/bg_item_white_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XL"
                    android:src="@mipmap/icon_doctor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/XXL"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科室医生"
                        android:textStyle="bold"
                        android:textColor="@color/tc1"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一览医生擅长"
                        android:textColor="@color/tc2"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_guide"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginBottom="@dimen/divider_line_thickness"
                android:layout_weight="1"
                android:background="@color/bc1">

                <ImageView
                    android:id="@+id/imge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/XL"
                    android:src="@mipmap/icon_guide" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/XXL"
                    android:layout_toRightOf="@id/imge1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="智能导诊"
                        android:textStyle="bold"
                        android:textColor="@color/tc1"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="症状自测找对医生"
                        android:textColor="@color/tc2"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:layout_marginTop="@dimen/L"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/rl_evaluate_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc1"
        android:padding="@dimen/XL">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院评价"
            android:textStyle="bold"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_evaluate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt1"
            android:text="(129)"
            android:textStyle="bold"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_evaluate_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_link_right"
            android:text="更多"
            android:textColor="@color/tc4"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

</LinearLayout>
