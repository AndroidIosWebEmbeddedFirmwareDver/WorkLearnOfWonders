<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_item_white_selector">
    <com.wondersgroup.hs.healthcloud.common.view.CircleImageView
        android:id="@+id/iv_hospital_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/XL"/>
    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_hospital_image"
        android:layout_alignTop="@+id/iv_hospital_image"
        android:singleLine="true"
        android:text="成都第一人民医院"
        android:textColor="@color/tc1"
        android:textSize="@dimen/text_size_15"/>
    <TextView
        android:id="@+id/tv_hospital_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_hospital_image"
        android:layout_alignBottom="@+id/iv_hospital_image"
        android:singleLine="true"
        android:text="三级甲等"
        android:textColor="@color/stc1"
        android:textSize="@dimen/text_size_12"/>
    <TextView
        android:id="@+id/tv_hospital_reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/L"
        android:layout_toRightOf="@+id/tv_hospital_level"
        android:layout_alignBottom="@+id/iv_hospital_image"
        android:singleLine="true"
        android:text="预约量1000"
        android:textColor="@color/tc3"
        android:textSize="@dimen/text_size_12"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:layout_marginTop="@dimen/XXL"
        android:layout_toRightOf="@+id/iv_hospital_image"
        android:layout_below="@+id/tv_hospital_level"
        android:background="@color/divider_color"
        />
</RelativeLayout>