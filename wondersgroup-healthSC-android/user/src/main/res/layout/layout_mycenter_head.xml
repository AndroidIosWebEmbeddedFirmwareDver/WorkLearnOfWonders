<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="宝妈1613"
        android:textColor="@color/tc0"
        android:textSize="@dimen/text_size_18" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <com.wondersgroup.hs.healthcloud.common.view.CircleImageView
            android:id="@+id/civ_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_user_default"
            app:border_color="@color/bc1"
            app:border_width="1dp" />

        <ImageView
            android:id="@+id/iv_auth_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_no_auth"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignRight="@+id/civ_photo"
            android:layout_alignBottom="@+id/civ_photo"/>
    </RelativeLayout>

</LinearLayout>
