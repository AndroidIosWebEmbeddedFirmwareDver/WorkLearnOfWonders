<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
            <!-- 设置圆角矩形 -->
            <corners android:radius="@dimen/M"/>
            <stroke
                android:width="1px"
                android:color="@color/dc2"/>
            <solid android:color="@color/dc2"/>

        </shape>
    </item>

    <item android:drawable="@drawable/shape_corners_white"/>
</selector>
