<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wondersgroup.hs.healthcloud.common.view.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height_L"
        android:background="@color/bc1"
        app:pstsIndicatorColor="@color/tc5"
        app:pstsIndicatorHeight="3dp"
        app:pstsSelectedTabTextColor="@color/tc5"
        app:pstsSelectedTabTextSize="@dimen/text_size_14"
        app:pstsTabPaddingLeftRight="@dimen/L"
        app:pstsTabTextColor="@color/tc1"
        app:pstsTabTextSize="@dimen/text_size_14"
        app:pstsUnderlineColor="@color/dc1"
        app:pstsUnderlineHeight="@dimen/divider_line_thickness"
        app:pstsUnderlinePadding="30dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bc7"
                android:text="申请转诊"
                android:textColor="@color/bc1"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/bt_access"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bc_extract_addition"
                android:text="接入转诊"
                android:textColor="@color/bc1"
                android:textSize="@dimen/text_size_14"

                />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>