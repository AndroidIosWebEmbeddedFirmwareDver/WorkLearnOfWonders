<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_doctor_bgk">

    <ImageView
        android:id="@+id/actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/L"
        android:layout_marginTop="@dimen/M"
        android:padding="@dimen/L"
        android:src="@mipmap/ic_back_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/L"
        android:layout_marginBottom="@dimen/XXL"
        android:layout_below="@id/actionbar_back">

        <com.wondersgroup.hs.healthcloud.common.view.CircleImageView
            android:id="@+id/iv_item_doctor_head_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_doctor_default_man"
            app:border_color="@color/bc1"
            app:border_width="1dip" />

        <TextView
            android:id="@+id/tv_item_doctor_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_doctor_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/L"
            android:textColor="@color/tc0"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_item_doctor_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_doctor_detail_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/L"
            android:textColor="@color/tc0"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:id="@+id/tv_item_doctor_detail_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_doctor_detail_title"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_doctor_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/L"
                android:text="接诊量："
                android:textColor="@color/tc0"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_item_doctor_detail_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/L"
                android:textColor="@color/tc0"
                android:textSize="@dimen/text_size_16" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_doctor_detail_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_doctor_detail_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/L"
            android:textColor="@color/tc0"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>