<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/XL"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginBottom="@dimen/XL"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/tc2"
        android:text="密码修改后，将重新登录账户" />

    <RelativeLayout
        android:id="@+id/rl_account_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/XXXXXL"
        android:background="@color/bc1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_original_pwd"
            android:layout_width="@dimen/albumitem_content_height"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_14"
            android:text="原密码" />
        <com.wondersgroup.hs.healthcloud.common.view.ClearEditText
            android:id="@+id/et_original_pwd"
            android:layout_toRightOf="@id/txt_original_pwd"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginRight="@dimen/XXXXXL"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/tc1"
            android:textColorHint="@color/tc3"
            android:textCursorDrawable="@drawable/edittext_cursor_blue"
            android:textSize="@dimen/text_size_14"
            app:clearDrawable="@mipmap/ic_login_cancel" />
        <ImageView
            android:id="@+id/iv_see_original_pwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:paddingLeft="@dimen/L"
            android:paddingRight="@dimen/XL"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_see_pwd_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/XL"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/XXXXXL"
        android:background="@color/bc1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_new_pwd"
            android:layout_width="@dimen/albumitem_content_height"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_14"
            android:text="新密码" />
        <com.wondersgroup.hs.healthcloud.common.view.ClearEditText
            android:id="@+id/et_new_pwd"
            android:layout_toRightOf="@id/txt_new_pwd"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/XXXXXL"
            android:layout_height="@dimen/edit_text_height"
            android:background="@null"
            android:hint="长度6-16位,字母与数字组合"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/tc1"
            android:textColorHint="@color/tc3"
            android:textCursorDrawable="@drawable/edittext_cursor_blue"
            android:textSize="@dimen/text_size_14"
            app:clearDrawable="@mipmap/ic_login_cancel" />
        <ImageView
            android:id="@+id/iv_see_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:paddingLeft="@dimen/L"
            android:paddingRight="@dimen/XL"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_see_pwd_selector" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/XL"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/XXXXXL"
        android:background="@color/bc1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_new_pwd2"
            android:layout_width="@dimen/albumitem_content_height"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_14"
            android:text="确认密码" />
        <com.wondersgroup.hs.healthcloud.common.view.ClearEditText
            android:id="@+id/et_new_pwd1"
            android:layout_toRightOf="@id/txt_new_pwd2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/XXXXXL"
            android:background="@null"
            android:hint="长度6-16位,字母与数字组合"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/tc1"
            android:textColorHint="@color/tc3"
            android:textCursorDrawable="@drawable/edittext_cursor_blue"
            android:textSize="@dimen/text_size_14"
            app:clearDrawable="@mipmap/ic_login_cancel" />
        <ImageView
            android:id="@+id/iv_see_new_pwd1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:paddingLeft="@dimen/L"
            android:paddingRight="@dimen/XL"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_see_pwd_selector" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_pwd_error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新密码格式不符，请重新输入（长度6-16位，字母与数字组合）"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginTop="@dimen/XL"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/tc_addtion" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginRight="@dimen/XL"
        android:layout_marginTop="@dimen/XXL"
        android:background="@drawable/btn_radius_blue_selector"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/tc0"
        android:text="完成" />

</LinearLayout>
