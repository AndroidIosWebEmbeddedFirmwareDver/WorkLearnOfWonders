<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/L"
        android:background="@color/bc1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/XL">

        <TextView
            android:id="@+id/tv_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_pay_success"
            android:text="支付成功"
            android:drawablePadding="@dimen/XL"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/tc2"
            android:textSize="@dimen/text_size_18"/>


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7元"
            android:textColor="@color/stc1"
            android:layout_marginTop="@dimen/XL"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错误信息"
            android:textColor="@color/tc1"
            android:layout_marginTop="@dimen/XXXXL"
            android:layout_marginBottom="@dimen/XXL"
            android:textSize="@dimen/text_size_16"/>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/XXXL"
            android:background="@drawable/btn_submit_selector"
            android:text="重新支付"
            android:textColor="@color/bc1"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
</LinearLayout>