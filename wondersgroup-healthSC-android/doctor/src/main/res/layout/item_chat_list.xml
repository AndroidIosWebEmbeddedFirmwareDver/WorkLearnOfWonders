<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/bc1"
    android:padding="@dimen/XL">

    <com.wondersgroup.hs.healthcloud.common.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_doctor_default_man"/>

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/XL"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_time"
                android:text="陈某某陈某某陈某某陈某某陈某某"
                android:textColor="@color/tc1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/L"
                android:text="上午 11:09"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_16"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L"
            android:text="环信回话消息环信回话消息环信回话消息环信回话消息环信回话消息"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/tc3"
            android:textSize="@dimen/text_size_13"/>

    </LinearLayout>

</RelativeLayout>
