<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item  android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/dc1" >
            </solid>
            <stroke
                android:width="1px"
                android:color="@color/dc1" />
            <corners android:radius="5dp" >
            </corners>
        </shape>
    </item>
    <item  android:state_enabled="true" android:state_selected="true">
        <shape>
            <solid android:color="@color/dc1" >
            </solid>
            <stroke
                android:width="1px"
                android:color="#dddddd" />
            <corners android:radius="5dp" >
            </corners>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/bc1" >
            </solid>
            <stroke
                android:width="1px"
                android:color="#dddddd" />
            <corners android:radius="5dp" >
            </corners>
        </shape>
    </item>
	<item >
        <shape>
            <solid android:color="@color/bc1" >
            </solid>
            <stroke
                android:width="1px"
                android:color="#dddddd" />
            <corners android:radius="5dp" >
            </corners>
        </shape>
    </item>
</selector>
