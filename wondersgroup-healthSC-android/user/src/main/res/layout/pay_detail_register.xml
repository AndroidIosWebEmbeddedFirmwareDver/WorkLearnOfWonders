<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/L"
        android:background="@color/bc1"
        android:orientation="vertical"
        android:padding="@dimen/XL">

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textColor="@color/tc2"
            android:textSize="@dimen/text_size_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金    额:\t"
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tc5"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:layout_marginTop="@dimen/L"
            android:background="@color/dc1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/XL">

            <TextView
                android:id="@+id/pay_type_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在15分钟内完成支付"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_type_desc"
                android:layout_marginTop="@dimen/L"
                android:text="逾期订单将自动取消"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="bottom|right">

                <TextView
                    android:id="@+id/count_down_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sbc1"
                    android:textSize="@dimen/text_size_20"/>

                <TextView
                    android:id="@+id/count_down_min_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/M"
                    android:layout_marginRight="@dimen/M"
                    android:text="分"
                    android:textColor="@color/sbc1"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/count_down_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sbc1"
                    android:textSize="@dimen/text_size_20"/>

                <TextView
                    android:id="@+id/count_down_second_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/M"
                    android:layout_marginRight="@dimen/M"
                    android:text="秒"
                    android:textColor="@color/sbc1"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>