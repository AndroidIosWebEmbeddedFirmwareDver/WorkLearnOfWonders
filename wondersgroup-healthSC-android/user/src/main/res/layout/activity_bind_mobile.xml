<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/XL"
        android:textSize="@dimen/text_size_12"
        android:text="点击手机号，更换手机号，下次登录时使用更换的手机号" />

    <RelativeLayout
        android:id="@+id/rl_account_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_mobile"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_12"
            android:hint="请输入更换的手机号" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/XL"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/rl_bind_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_authcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/XL"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_authecode"
            android:layout_width="@dimen/XXXL"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_authcode"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_12"
            android:hint="" />
        <TextView
            android:id="@+id/txt_get_authcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/XL"
            android:textColor="@color/bc8"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_12"
            android:text="获取验证码"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码错误，请重新获取验证码并输入"
        android:layout_marginLeft="@dimen/XL"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/tc_addtion" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/XXXXL"
        android:layout_marginRight="@dimen/XXXXL"
        android:layout_marginTop="@dimen/XXL"
        android:text="完成" />

</LinearLayout>
