<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:paddingLeft="@dimen/XL"
        android:paddingRight="@dimen/XL"
        android:gravity="bottom"
        android:paddingBottom="6dp"
        android:orientation="horizontal">

        <com.wondersgroup.hs.healthcloud.common.view.ClearEditText
            android:id="@+id/title_edit"
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_stroke_white_gray"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="@dimen/M"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/L"
            android:paddingRight="@dimen/L"
            android:singleLine="true"
            android:textColor="@color/tc1"
            android:textColorHint="@color/tc4"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/L"
            android:text="取消"
            android:textSize="@dimen/text_size_16"
            android:textColor="#2E7AF0"
            android:visibility="visible" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/divider_color"/>

</LinearLayout>