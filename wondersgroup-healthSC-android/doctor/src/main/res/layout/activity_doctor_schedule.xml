<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/doctor_schedule_hospital_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc1"
        android:layout_marginTop="@dimen/L"
        android:paddingTop="@dimen/XXL"
        android:paddingBottom="@dimen/XXL"
        android:paddingLeft="@dimen/XL"
        android:paddingRight="@dimen/XL"
        android:textColor="@color/tc2"
        android:textSize="@dimen/text_size_14"
        android:text="脑心血管内科－成都市第一人民医院"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/bc1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/L"
                android:paddingRight="@dimen/L"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/tc3"
                android:text="排\n班"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:background="@color/divider_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/L"
                android:paddingRight="@dimen/L"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/tc3"
                android:text="上\n午"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:background="@color/divider_color"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/L"
                android:paddingRight="@dimen/L"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/tc3"
                android:text="下\n午"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:background="@color/divider_color"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_line_thickness"
            android:layout_height="150dp"
            android:background="@color/divider_color"/>

        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:divider="@color/divider_color"
            android:dividerHeight="@dimen/divider_line_thickness"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:numColumns="3"
            android:orientation="horizontal"
            app:recyclerStyle="grid"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/L"/>
</LinearLayout>