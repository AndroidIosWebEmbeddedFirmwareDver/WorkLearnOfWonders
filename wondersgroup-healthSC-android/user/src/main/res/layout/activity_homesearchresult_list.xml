<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/layout_search"
        layout="@layout/layout_title_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.wondersgroup.hs.healthcloud.common.view.PullToRefreshView
        android:id="@+id/pull_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <!--android.support.v7.widget.RecyclerView-->
        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/divider_color"
            android:dividerHeight="@dimen/divider_line_thickness"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:recyclerStyle="list">

        </com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView>
    </com.wondersgroup.hs.healthcloud.common.view.PullToRefreshView>
</LinearLayout>
