<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:windowBackground">@null</item>-->
    </style>

    <style name="MineItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_item_white_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppointmentTableLeft">
        <item name="android:layout_height">@dimen/XXL</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/tc4</item>
        <item name="android:paddingLeft">@dimen/XXXL</item>
        <item name="android:paddingRight">@dimen/XL</item>
        <item name="android:paddingTop">@dimen/S</item>
        <item name="android:paddingBottom">@dimen/S</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="AppointmentTableRight">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/tc5</item>
        <item name="android:paddingRight">@dimen/XXXL</item>
        <item name="android:paddingTop">@dimen/S</item>
        <item name="android:paddingBottom">@dimen/S</item>
    </style>

    <style name="AppointmentButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/tc0</item>
        <item name="android:paddingLeft">@dimen/M</item>
        <item name="android:paddingRight">@dimen/M</item>
        <item name="android:paddingTop">@dimen/S</item>
        <item name="android:paddingBottom">@dimen/S</item>
        <item name="android:background">@drawable/shape_res_enable</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textColor">@color/btn_login_text_selector</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/btn_login_selector</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:textColor">@color/tc1</item>
        <item name="android:textColorHint">@color/tc3</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:background">@null</item>
    </style>

    <style name="input_text">
        <item name="android:textColor">@color/tc3</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <!-- popwindow的消失动画 -->
    <style
        name="Popwindowstyle" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:windowExitAnimation">@anim/activity_translate_out</item>
    </style>


</resources>
