<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fg_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/XXL"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_check_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/XXXL"
                android:src="@mipmap/ic_auth_checking"/>

            <TextView
                android:id="@+id/tv_auth_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/XL"
                android:text="审核中..."
                android:textColor="@color/tc2"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_check_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_check_state"
                android:layout_marginLeft="@dimen/XXXXXL"
                android:layout_marginRight="@dimen/XXXXXL"
                android:layout_marginTop="@dimen/L"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_auth_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bc1">

            <View
                android:id="@+id/view_line0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/ll_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/XL"
                    android:text="姓名"
                    android:textColor="@color/tc2"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="@dimen/XL"
                    android:paddingLeft="@dimen/L"
                    android:paddingRight="@dimen/XL"
                    android:paddingTop="@dimen/XL"
                    android:textColor="@color/tc1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:layout_below="@id/ll_real_name"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/ll_cardID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cardid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/XL"
                    android:text="身份证"
                    android:textColor="@color/tc2"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_cardID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:paddingBottom="@dimen/XL"
                    android:paddingLeft="@dimen/L"
                    android:paddingRight="@dimen/XL"
                    android:paddingTop="@dimen/XL"
                    android:textColor="@color/tc1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_thickness"
                android:layout_below="@id/ll_cardID"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/ll_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/XL"
                    android:text="实名认证"
                    android:textColor="@color/tc2"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:paddingBottom="@dimen/XL"
                    android:paddingLeft="@dimen/L"
                    android:paddingRight="@dimen/XL"
                    android:paddingTop="@dimen/XL"
                    android:text="审核中"
                    android:textColor="@color/stc3"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"/>

        <LinearLayout
            android:id="@+id/ll_authentication_failure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bc1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/XL"
                    android:layout_marginTop="@dimen/XL"
                    android:text="审核失败原因："
                    android:textColor="@color/tc1"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_check_failure_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/XL"
                    android:layout_marginTop="@dimen/L"
                    android:text="您所填的身份证号码，与照片不匹配，请填写正确后，重新提交审核，谢谢。"
                    android:textColor="@color/tc3"
                    android:layout_marginBottom="@dimen/XL"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_reauthe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/XXL"
                android:layout_marginLeft="@dimen/XL"
                android:layout_marginRight="@dimen/XL"
                android:layout_marginTop="@dimen/XXXXXL"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/XXL"
                android:paddingRight="@dimen/XL"
                android:text="重新申请实名认证"
                android:textColor="@color/tc0"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>