<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/bc2" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/M" />
            <stroke android:color="@color/divider_color" android:width="@dimen/divider_line_thickness" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/bc3" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/M" />
            <stroke android:color="@color/divider_color" android:width="@dimen/divider_line_thickness" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/bc1" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/M" />
            <stroke android:color="@color/divider_color" android:width="@dimen/divider_line_thickness" />
        </shape>
    </item>
</selector>
