<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_today"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:button="@null"
            android:background="@drawable/bg_item_white_selector"
            android:paddingLeft="@dimen/XL"
            android:paddingRight="@dimen/XL"
            android:text="今天"
            android:gravity="center"
            android:textColor="@color/btn_sex_cancle_selector"
            android:textSize="@dimen/text_size_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:background="@color/divider_color"/>

        <RadioButton
            android:id="@+id/rb_last_month"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:button="@null"
            android:background="@drawable/bg_item_white_selector"
            android:paddingLeft="@dimen/XL"
            android:paddingRight="@dimen/XL"
            android:text="最近一个月"
            android:gravity="center"
            android:textColor="@color/btn_sex_cancle_selector"
            android:textSize="@dimen/text_size_14"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_thickness"
            android:background="@color/divider_color"/>

        <RadioButton
            android:id="@+id/rb_last_sex_month"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:button="@null"
            android:background="@drawable/bg_item_white_selector"
            android:paddingLeft="@dimen/XL"
            android:paddingRight="@dimen/XL"
            android:text="最近六个月"
            android:gravity="center"
            android:textColor="@color/btn_sex_cancle_selector"
            android:textSize="@dimen/text_size_14"/>
    </RadioGroup>

    <include layout="@layout/common_divider"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/tc3"
        android:textSize="@dimen/text_size_14"
        android:background="@color/bc1"
        android:gravity="center"
        android:text="取消"/>
</LinearLayout>

