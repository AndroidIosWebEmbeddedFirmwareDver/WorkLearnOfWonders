<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bc1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/XL"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/tc2"
        android:text="这个医生很好，解决了我的问题，非常感谢" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/XL"
        android:paddingRight="@dimen/XL"
        android:layout_marginBottom="@dimen/XL"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tc3"
            android:textSize="@dimen/text_size_12"
            android:text="张**"/>
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/tc3"
            android:textSize="@dimen/text_size_12"
            android:text=""/>
    </RelativeLayout>

</LinearLayout>
