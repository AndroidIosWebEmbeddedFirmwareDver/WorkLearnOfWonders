<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pickerview_bg_topbar"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="@dimen/pickerview_topbar_padding"
        android:text="@string/pickerview_cancel"
        android:textColor="@color/tc2"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/pickerview_topbar_title"
        android:textSize="@dimen/pickerview_topbar_title_textsize" />

    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|left"
        android:padding="@dimen/pickerview_topbar_padding"
        android:text="@string/pickerview_submit"
        android:textColor="@color/tc5"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
