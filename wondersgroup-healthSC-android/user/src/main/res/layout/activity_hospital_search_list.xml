<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/tc5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/L"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/L"
            android:layout_marginRight="@dimen/XL"
            android:background="@drawable/btn_radius_stroke_white_gray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/M"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/divider_color"/>

    <com.wondersgroup.hs.healthcloud.common.view.pullrefresh.PullToRefreshView
        android:id="@+id/pull_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--android.support.v7.widget.RecyclerView-->
        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view_hospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:divider="@color/dc1"
            android:dividerHeight="@dimen/divider_line_thickness"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:recyclerStyle="list">

        </com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView>
    </com.wondersgroup.hs.healthcloud.common.view.pullrefresh.PullToRefreshView>

</LinearLayout>