<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wondersgroup.hs.healthcloud.common.view.PagerSlidingTabStrip
        android:id="@+id/department_name_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bc1"
        app:pstsIndicatorColor="@color/tc5"
        app:pstsIndicatorHeight="@dimen/S"
        app:pstsSelectedTabTextColor="@color/tc5"
        app:pstsSelectedTabTextSize="@dimen/text_size_14"
        app:pstsTabTextSize="@dimen/text_size_14"
        app:pstsUnderlinePadding="50dp"
        app:pstsTabTextColor="@color/tc1"

         />
    <android.support.v4.view.ViewPager
        android:id="@+id/department_name_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>