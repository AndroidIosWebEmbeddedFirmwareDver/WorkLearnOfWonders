<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wondersgroup.hs.healthcloud.common.view.PullToRefreshView
        android:id="@+id/pull_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--android.support.v7.widget.RecyclerView-->
        <com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView
            android:id="@+id/recycler_view_hospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scrollbars="vertical"
            android:orientation="vertical"
            android:divider="@color/dc1"
            android:dividerHeight="@dimen/divider_line_thickness"
            app:recyclerStyle="list">

        </com.wondersgroup.hs.healthcloud.common.view.BaseRecyclerView>
    </com.wondersgroup.hs.healthcloud.common.view.PullToRefreshView>

</RelativeLayout>