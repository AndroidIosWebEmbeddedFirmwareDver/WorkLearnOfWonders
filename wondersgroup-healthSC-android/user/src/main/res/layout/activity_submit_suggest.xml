<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:layout_marginTop="@dimen/XL"
        android:background="@color/divider_color" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc1"
        android:gravity="top"
        android:hint="请输入您的意见或反馈"
        android:lines="10"
        android:padding="@dimen/L"
        android:textColor="@color/tc1"
        android:textColorHint="@color/tc3"
        android:textSize="@dimen/text_size_16" />

    <include layout="@layout/common_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:layout_marginTop="@dimen/XL"
        android:background="@color/divider_color" />

    <EditText
        android:id="@+id/et_contact_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/bc1"
        android:gravity="center_vertical"
        android:hint="请输入您的联系方式"
        android:inputType="number"
        android:paddingLeft="@dimen/XL"
        android:textColor="@color/tc1"
        android:textColorHint="@color/tc3"
        android:textSize="@dimen/text_size_16" />

    <include layout="@layout/common_divider" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height_L"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginRight="@dimen/XL"
        android:layout_marginTop="@dimen/XXXXXL"
        android:background="@drawable/btn_selector"
        android:text="提交"
        android:textColor="@color/tc0"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>