<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="@dimen/divider_line_thickness"
                        android:color="@color/tc5" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="@dimen/divider_line_thickness"
                        android:color="@color/tc5" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item >
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="@dimen/divider_line_thickness"
                        android:color="@color/bc3" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>